= link_to "New Post", new_post_path

%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Title
      %th.options Options
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td
          = link_to "edit", edit_post_path(post)
          = link_to "delete", post_path(post), data: { method: :delete, confirm: "Are you sure?"}

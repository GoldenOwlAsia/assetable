= simple_form_for @post do |f|
  .row
    = f.label :title
    = f.text_field :title
  .row
    = f.label :body
    = f.text_area :body

  = f.input :image, class: "hadouken", as: :uploader
  = f.input :hero_image, class: "hadouken", as: :uploader

  = f.input :gallery, as: :gallery
  = f.input :hadouken, as: :gallery


  .row
    %h4 Sections
    = f.simple_fields_for :sections, (f.object.sections.build unless f.object.sections.present?) do |s|
      = s.text_field :title
      = s.input :image, as: :uploader
      = s.input :gallery, as: :gallery

  
  = f.submit